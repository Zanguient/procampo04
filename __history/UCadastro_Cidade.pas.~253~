    Op: TOperacoes;
    Mensagens: TMensagens;
    Log: TLog;
    GeraCodigo: TGeradorDeCodigo;
    FCidade: TCidadeEntidade;
    FCidadeDominio: TCidadeDominio;
    FComandoSQL: TComandoSQLEntidade;
    function Confira: boolean;
  public
    ativo, enderec, achei: boolean;
